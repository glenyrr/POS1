@model POSONE.Model.Entities.Marca

@{
    ViewBag.Title = "Creacion de Marca";
}

<h2>Crear Marca de Articulos</h2>

@using (Html.BeginForm("Create","Marca"))
{
    @Html.AntiForgeryToken()
    <p class="alert alert-info">Todos los datos son <strong>Requeridos</strong>.</p>
       <div class="form-group">    
            @Html.LabelFor(m => m.Id)
            @Html.DisplayFor(m => m.Id)
        </div>

        <div class="form-group">
            @Html.LabelFor(m=> m.Nombre)
            @Html.TextBoxFor(m=>m.Nombre, new {@class="form-control", autofocus="autofocus"})
            @Html.ValidationMessageFor(m=>m.Nombre)
        </div>

        <button type="submit" class="btn btn-primary" >
              <i class="glyphicon glyphicon-floppy-disk"></i>  Guardar
            Guardar</button>

       
}
 @Html.ActionLink("Lista de Marcas","Index");
 
@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}