@model POSONE.Model.Entities.Categoria

@{
    ViewBag.Title = "Crear Categoria Articulos";
}

<h2>Crear Categoria para articulo</h2>

@using (Html.BeginForm("Create","Categoria"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m=> m.Id)
        @Html.DisplayFor(m=>m.Id)
    </div>
    <div class="form-group">
        @Html.LabelFor(m=> m.Nombre)
        @Html.TextBoxFor(m=>m.Nombre,new {@class = "form-control", autofocus = "autofocus"})
        @Html.ValidationMessageFor(m=>m.Nombre)
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
}

@Html.ActionLink("Lista de Categoria","Index")