@using POSONE.Model
@using System.Collections.Generic

@model IEnumerable<POSONE.Model.Entities.Categoria>
@{
    ViewBag.Title = "Categorias";
}

<h2>Listado de Cateogorias del Articulos</h2>

@Html.ActionLink("Crear Categoria","Create")
<table class="table table-hover table-bordered" >
    <thead>
        <th>Id</th>
        <th>Nombre</th>
        <th>Acciones</th>
    </thead>

    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nombre</td>
          
            <td>
                @Html.ActionLink("Detalle", "Detail", new { id=item.Id }) |    
                @Html.ActionLink("Editar", "Edit", new { id=item.Id })
            </td>
        </tr>

        }
    </tbody>

</table>
<div class="panel-footer">Count = @Model.Count()</div>

