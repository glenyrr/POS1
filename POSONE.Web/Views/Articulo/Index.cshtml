@using POSONE.Model
@using System.Collections.Generic

@model IList<POSONE.Model.Entities.Articulo>

@{
        ViewBag.Title = "Item List";
}
<h2>Product List</h2>

<table style="width:100%">
<tr>
        <th>Articulo Id</th>
        <th>Articulo</th>
        <th>Cantidad</th>
        <th>Action</th>
</tr>
@Html.ActionLink("Crear Articulo", "Edit") 

@foreach(var item in Model)
{
        <tr>
                <td>@item.Id</td>
                <td>@Html.ActionLink(item.DescripcionLarga, "Detail", new { id=item.Id }) </td>
                <td>@item.CostoPromedio</td>
                <td>
                    @Html.ActionLink("Detalle", "Detail", new { id=item.Id }) |    
                    @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
                </td>
        </tr>
}


</table>
