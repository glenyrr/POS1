@using POSONE.Model
@using System.Collections.Generic

@model IList<POSONE.Model.Entities.Articulo>

@{
        ViewBag.Title = "Item List";
}


<h2>Lista de Articulos</h2>

@Html.ActionLink("Crear Articulo", "Create") 
<table class="table table-hover table-bordered" >
        <thead>
                <th>Articulo Id</th>
                <th>Articulo</th>
                <th>Cantidad</th>
                <th>Activo</th>
                <th>Acciones</th>
        </thead>


<tbody>
@foreach(var item in Model)
{
    <tr>
         <td>@item.Id</td>
         <td>@Html.ActionLink(item.DescripcionLarga, "Detail", new { id=item.Id }) </td>
         <td>@item.CostoPromedio</td>
          <td>@item.Activo</td>
         <td>
              @Html.ActionLink("Detalle", "Detail", new { id=item.Id }) |    
              @Html.ActionLink("Editar", "Edit", new { id=item.Id })
         </td>
    </tr>
}
</tbody>

</table>
<div class="panel-footer">Count = @Model.Count()</div>